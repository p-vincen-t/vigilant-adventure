{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext"],
    "types": ["node"],
    "module": "commonjs",
    "sourceMap": true,
    "target": "es2015",
    "skipLibCheck": true,
    "preserveConstEnums": true
  },
  "include": [
    "src"
  ],
  "exclude": ["**/*.spec.ts", "node_modules"]
}
